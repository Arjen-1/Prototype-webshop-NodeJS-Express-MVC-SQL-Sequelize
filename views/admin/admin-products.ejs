<%- include('../partials/head.ejs') %>
</head>
<body> 
    <%- include('../partials/navigation.ejs') %> 
    <main>
            <% if (prods.length > 0){%> 
            <div class="grid">
                <% for (let product of prods){ %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"> 
                                <%= product.title %>
                            </h1>
                            <div class="card__image">
                                <img src="<%= product.imageUrl%>" alt="" class="shop__thumbnail">
                                <!-- https://images.unsplash.com/photo-1509021436665-8f07dbf5bf1d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2534&q=80 -->
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">
                                        <%= product.price%>
                                </h2>
                                <p class="product__description">
                                        <%= product.description%>
                                </p>
                            </div>
                            <div class="card__actions">
                                <form action="/admin/edit-product" method="POST">
                                    <input type="hidden" name="productId" value="<%= product.id%>">
                                    <button type="submit" class="btn" >Edit</button>
                                </form>
                                
                                <form action="/admin/delete-product" method="POST">
                                    <input type="hidden" name="productId" value="<%= product.id%>">
                                    <button class="btn"  type="submit">Delete</button>
                                </form>
                                
                            </div>
                        </header>
                    </article>
                    <%  } %>

            </div>  
            <% } else{ %>
            <h1>No products</h1> 
            <% } %>
        </main>


<%- include('../partials/end.ejs') %>